    <bean id="obraEliminadasController"  class="sgb.controller.domainController.ObraEliminadasController" >
        <constructor-arg index="0" ref="CRUDService"/>
    </bean>

    <context:annotation-config />
    <context:component-scan base-package="sgb"/>
</beans>
