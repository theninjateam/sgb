        <constructor-arg index="3" ref="emprestimoController"/>
        <constructor-arg index="4" ref="miniBookingConcurrenceController"/>
    </bean>

    <bean id="bookingDeadlineController"  class="sgb.deadline.BookingDeadlineController" >
