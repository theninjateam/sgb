<?xml version="1.0" encoding="UTF-8"?>

<zk xmlns="http://www.zkoss.org/2005/zul">
    <window id="winAddExe" sclass="windows" action="show: slideDown; hide: slideUp" width="600px" apply="sgb.controller.viewsController.ObraController">
        <div sclass="conteudo">
        <div class="row" style="margin-top: 20px">
            <div class="col-lg-6">
                <div class="input-group">
                    <span class="input-group-addon">Quantidade</span>
                    <decimalbox class="form-control" />
                </div>
            </div>
            <div sclass="col-lg-6">
                <div sclass="input-group">
                    <span sclass="input-group-addon">Aquisição</span>
                    <combobox width="100%">
                        <comboitem label="Compra"/>
                        <comboitem label="Oferta"/>
                    </combobox>
                </div>
            </div>
        </div>
        <div sclass="conteudo">
            <hlayout>
                <button label="Adicionar" sclass="btn-primary" id="Addexe"/>
                <button label="Voltar" sclass="btn-warning" onClick="winAddExe.detach()"/>
            </hlayout>
        </div>
        </div>
    </window>
</zk>
