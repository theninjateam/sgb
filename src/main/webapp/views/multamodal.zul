                                                            <!--<label sclass="w3-mediu " value="${each.diasatraso}" />-->
                                                        <!--</div>-->
                                                        <!--<div sclass="w3-left">-->
                                                            <!--<label sclass="w3-medium" value="Taxa diaria de atraso:"/>-->
                                                            <!--<label sclass="w3-mediu " value="${each.taxadiaria} MTs"/>-->
                                                        <!--</div>-->
                                                        <!--<div sclass="w3-left">-->
