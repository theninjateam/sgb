                                                            <!--<label sclass="w3-mediu " value="${$composer.dataPrevistaDevolucao(each.multaPK)}"/>-->
                                                        <!--</div>-->
                                                        <!--<div sclass="w3-left">-->
                                                            <!--<label sclass="w3-medium" value="Data da devolucao:"/>-->
                                                            <!--<label sclass="w3-mediu " value="${$composer.dataConvert(each.dataemissao)}"/>-->
                                                        <!--</div>-->
                                                        <!--<div sclass="w3-left">-->
