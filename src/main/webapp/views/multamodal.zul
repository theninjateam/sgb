                                                            <!--<label sclass="w3-mediu " value="${each.valorpago} MTs"/>-->
                                                        <!--</div>-->

                                                    </div>
                                                </div>
                                            </div>

                                            <div align="center">
                                                <button     label="Revogar"  forward="onClick=multaListBox.onRevogar" mold="os"  sclass="w3-btn w3-black"/>
                                                <button     label="Devolver"  forward="onClick=multaListBox.onDevolver" mold="os"  sclass="w3-btn w3-black"/>
                                                <button     label="Pagar"  forward="onClick=multaListBox.onPagar" mold="os"  sclass="w3-btn w3-black"/>
                                                <button label="Fechar" forward="onClick=multaListBox.onExit" sclass="w3-btn w3-light-gray " mold="os"/>
                                            </div>
                                        </listcell>
                                    </listitem>
                                </template>

                                <listfoot >
                                    <listfooter  height="100%" width="100%" style="padding: 15px 32px; background-color: lightgray; border-style: none;"/>
                                </listfoot>
                            </listbox>
                        </vlayout>
                    </column>
                </columns>
            </grid>
    </window>
</zk>