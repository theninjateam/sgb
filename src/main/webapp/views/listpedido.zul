<?xml version="1.0" encoding="UTF-8"?>
<zk>
    <window id="listObra" apply="sgb.controller.viewsController.ListPedido"
            border="none" hflex="1" vflex="1" contentStyle="overflow:auto">
        <div style="padding:0px">
            <tabbox>
                <tabs>
                    <tab label="${labels.obrainfo}"></tab>
                </tabs>
                <tabpanels>
                    <tabpanel>
                        <grid>
                            <columns>
                                <column/>
                            </columns>
                            <rows>

                                <row>
                                    <listbox width="100%" id="pedidoListBox"
                                             emptyMessage="Nao tem nenhum pedido pendente">
                                        <listhead>
                                            <listheader width="20%" height="100%" label="Data"/>
                                            <listheader width="20%" height="100%" label="Capa"/>
                                            <listheader width="60%" height="100%" label="Obra Requisitada"/>
                                            <listheader width="5%" height="100%" label="Qtd"/>
                                            <listheader width="60%" height="100%" label="Operacoes"/>
                                        </listhead>
                                        <template name="model">
                                            <listitem>
                                                <listcell>
                                                    <zscript>
                                                        <![CDATA[
                                                        import java.text.*;
                                                        SimpleDateFormat  timeFormatter = new SimpleDateFormat("'('HH:mm:s')'");
                                                        DateFormat  dateFormatter = new SimpleDateFormat();
                                                        Locale MOZAMBIQUE = new Locale("pt","MZ");
                                                        StringBuilder builder = new StringBuilder();

                                                        dateFormatter = DateFormat.getDateInstance(DateFormat.FULL, MOZAMBIQUE);

                                                        builder.append(dateFormatter.format(each.emprestimoPK.dataentrada.getTime()));
                                                        builder.append("\n");
                                                        builder.append(timeFormatter.format(each.emprestimoPK.dataentrada.getTime()));

                                                        String dataEntrada = builder.toString();
                                                    ]]>
                                                    </zscript>
                                                    <div>
                                                        <label value="${dataEntrada}"/>
                                                    </div>
                                                </listcell>
                                                <listcell>
                                                    <div>
                                                        <image width="100%" height="100%"
                                                               src="${each.emprestimoPK.obraConcurrenceController.pathcapa}"/>
                                                    </div>
                                                </listcell>
                                                <listcell>
                                                    <hlayout>
                                                        <div>
                                                            <div>
                                                                <label value="${each.emprestimoPK.obraConcurrenceController.titulo}"
                                                                       style="font-size: large; font-weight: bold; padding: 2px 2px 2px 2px; font-size: 15px;"/>
                                                            </div>
                                                            <div>
                                                                <label value="Por :"/>
                                                                <label forEach="${each.emprestimoPK.obraConcurrenceController.autores}"
                                                                       value="${each.nome} ,"/>
                                                            </div>
                                                            <div>
                                                                <label value="Tipo:"/>
                                                                <label value="(${each.emprestimoPK.obraConcurrenceController.tipoobra.descricao})"/>
                                                            </div>
                                                        </div>
                                                    </hlayout>
                                                </listcell>
                                                <listcell>
                                                    <div>
                                                        <label value="${each.quantidade}"/>
                                                    </div>
                                                </listcell>
                                                <listcell>
                                                    <div>
                                                        <button label="Eliminar"
                                                                forward="onClick=pedidoListBox.onEliminarEmprestimo"
                                                                mold="os" sclass="btn"
                                                                style="padding: 10px 10px 10px 10px; font-size: 12px; font-weight: bold"/>
                                                        <!-- Devem estar disponivel so para administrador-->
                                                        <button  label="Aprovar" forward="onClick=pedidoListBox.onAprovarEmprestimo"
                                                        mold="os" sclass="btn" style="padding: 10px 10px 10px 10px; font-size: 12px; font-weight: bold"/>
                                                        <button  label="Reprovar" forward="onClick=pedidoListBox.onReprovarEmprestimo"
                                                        mold="os" sclass="btn" style="padding: 10px 10px 10px 10px; font-size: 12px; font-weight: bold"/>
                                                    </div>
                                                </listcell>
                                            </listitem>
                                        </template>
                                    </listbox>
                                </row>
                            </rows>
                        </grid>
                    </tabpanel>
                </tabpanels>
            </tabbox>
        </div>
    </window>
</zk>